{
  "name": "stardust-stats-azure",
  "scripts": {
    "precommit": "lint-staged"
  },
  "dependencies": {
    "lodash": "^4.17.19",
    "mongodb": "3.1.13"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
